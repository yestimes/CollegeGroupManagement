<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">
    
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>loginClass</servlet-name>
        <servlet-class>org.john.controller.LoginServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>IndexInit</servlet-name>
        <servlet-class>org.john.controller.IndexInitServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>loginClass</servlet-name>
        <url-pattern>/userLogin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IndexInit</servlet-name>
        <url-pattern>/getIndexInitInfo</url-pattern>
    </servlet-mapping>


</web-app>
